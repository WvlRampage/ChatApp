@{
    ViewBag.Title = "ChatRoom";
}
<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h3 class="text-center">Welcome to Latin Chat please write your Nick</h3>
            <input type="text" id="nick" name="nick" class="form-control input-lg" placeholder="Nick...">
        </div>
    </div>
    <br>
    <i class="far fa-comments mejora"></i>
    <h3>Room Colombia </h3>

    <div class="container-chat">
        <div class="row">
            <ul id="discussion"> </ul>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <input type="text" class="form-control" id="message" /><br />
            <input type="text" class="btn btn-success" id="sendmessage" value="Send" />
        </div>
    </div>
</div>

<input type="hidden" id="displayname" />

@section Scripts{
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="/signalr/hubs"></script>
    <script src="~/Scripts/ConnectionHub.js"></script>
}
